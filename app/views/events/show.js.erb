$('body').append("<%= j(render @new_review) %>");

$("#previous-reviews").html("<%= j(render(:partial => 'products/reviews')) %>");

  <% if @review.errors.present? %>
    $("#review-form-errors").html("<%= j(render(:partial => '/products/review_form_errors')) %>");
  <% else %>
    $(".review-form-errors").html("");
    $("review-list").html("<%= j(render(:partial => '/products/reviews')) %>");
    $("#new_review")[0].reset();
  <% end %>
